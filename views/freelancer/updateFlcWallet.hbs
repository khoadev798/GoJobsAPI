<h1>Update employer wallet balance</h1>

<form style="width:auto;max-height: 100%" action="/web/updateEmpWalletWithId" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Employer _id</label>
            <input type="text" class="form-control" name="empId" value="{{info.flcId}}" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Employer name</label>
            <input type="text" class="form-control" name="empName" value="{{info.flcName}}" readonly>
        </div>

    </div>
    <div class="form-group">
        <label for="inputPassword4">Wallet _id</label>
        <input type="text" class="form-control" name="walletId" value="{{info.walletId}}" readonly>
    </div>
    <div class="form-group">
        <label for="inputAddress">Value to add</label>
        <input type="number" class="form-control" name="balance" placeholder="Value">
    </div>
    <div class="form-group">
        <label for="inputAddress2">Updated by</label>
        <input type="text" class="form-control" name="adminId" value={{admin._id}} readonly>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
