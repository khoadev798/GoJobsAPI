<div class="card img-fluid" style="max-width:100%; height: auto">
    <img class="card-img-top" src="image/pkl4.jpg" alt="Card image" style="opacity:0.5">
    <div class="card-img-overlay">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                {{!-- <h6 class="m-0 font-weight-bold text-primary">Tất cả sách</h6> --}}
                <h3><a href="/web/receipt">Receipts</a>
                    <!-- Topbar Search -->
                    <form action="/web/receipt" method="GET"
                        class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search float-right">
                        <div class="input-group">
                            <label for="from">From:</label>&nbsp;&nbsp;
                            <input type="date" id="from" name="from">&nbsp;&nbsp;
                            <label for="from">To:</label>&nbsp;&nbsp;
                            <input type="date" id="to" name="to">&nbsp;&nbsp;
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </h3>


            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>_id</th>
                                <th>Sender _id</th>
                                <th>Receiver _id</th>
                                <th>Updated value</th>
                                <th>Created at</th>
                                <th>Created by</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each receiptList}}
                            <tr>
                                <td>{{_id}}</td>
                                <td>{{senderId}}</td>
                                <td>{{receiverId}}</td>
                                <td>{{updatedValue}}</td>
                                <td>{{createdAt}}</td>
                                <td>{{createdBy}}</td>
                                <td>
                                    &nbsp; &nbsp;
                                    <a href="/web/receiptInfo?_id={{_id}}"><i class="fas fa-eye"
                                            aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination float-right">
                            {{!-- <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li> --}}

                            {{#forInRange 1 pageCount 1}}
                            <li class="page-item"><a class="page-link"
                                    href="/web/receipt?pageNumber={{this}}">{{this}}</a>
                            </li>
                            {{/forInRange}}
                            {{!-- <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li> --}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

</div>